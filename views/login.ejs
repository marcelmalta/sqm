<!doctype html>
<html>

<head>
  <%- include("partials/head") %>
</head>

<body class="page-enter bg-bg-main text-text-main flex flex-col min-h-screen">
  <%- include("partials/nav", { user: null }) %>

    <main class="flex-grow flex items-center justify-center p-4">
      <div class="glass rounded-2xl shadow-soft border border-white/60 p-8 w-full max-w-md">
        <div class="text-center mb-8">
          <h1 class="headline text-2xl font-bold text-text-main">Bem-vindo de volta</h1>
          <p class="text-text-meta mt-2">Acesse sua conta para participar.</p>
        </div>

        <% if (error) { %>
          <div
            class="mb-6 p-4 bg-red-50 text-red-700 rounded-lg text-sm font-medium border border-red-100 flex items-center gap-2">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <%= error %>
          </div>
          <% } %>

        <% if (success) { %>
          <div class="mb-6 p-4 bg-green-50 text-green-700 rounded-lg text-sm font-medium border border-green-100">
            <%= success %>
          </div>
        <% } %>

        <a href="/auth/google"
          class="w-full h-12 border border-gray-200 rounded-xl font-bold text-gray-800 hover:bg-white/70 transition-colors flex items-center justify-center gap-2">
          <span class="text-sm">Entrar com Google</span>
        </a>

        <div class="flex items-center gap-4 my-6">
          <div class="h-px bg-gray-200 flex-1"></div>
          <span class="text-xs text-text-meta font-medium">ou</span>
          <div class="h-px bg-gray-200 flex-1"></div>
        </div>

            <form action="/login" method="POST" class="space-y-5">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div>
                <label class="block text-sm font-bold text-gray-700 mb-1">Email</label>
                <input type="email" name="email" required
                  class="w-full h-12 rounded-lg border-gray-200 focus:ring-2 focus:ring-primary focus:border-primary transition-all text-base px-4"
                  placeholder="seu@email.com">
              </div>
              <div>
                <label class="block text-sm font-bold text-gray-700 mb-1">Senha</label>
                <input type="password" name="password" required
                  class="w-full h-12 rounded-lg border-gray-200 focus:ring-2 focus:ring-primary focus:border-primary transition-all text-base px-4 font-sans">
              </div>
              <div class="text-right">
                <a href="/forgot" class="text-sm text-primary font-semibold hover:underline">Esqueci minha senha</a>
              </div>

              <button
                class="w-full h-12 bg-primary text-white rounded-xl font-bold hover:bg-teal-700 transition-colors shadow-glow mt-2">
                Entrar
              </button>
            </form>

            <div class="mt-8 text-center text-sm text-text-meta">
              NÃ£o tem uma conta? <a href="/register" class="text-primary font-bold hover:underline">Cadastre-se</a>
            </div>
      </div>
    </main>
</body>

</html>




