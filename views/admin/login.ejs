<!doctype html>
<html>

<head>
  <%- include("../partials/head") %>
</head>

<body class="page-enter bg-bg-main text-text-main flex flex-col min-h-screen">
  <%- include("../partials/nav", { user }) %>

  <main class="flex-grow max-w-md mx-auto px-4 py-12 w-full">
    <div class="glass rounded-2xl shadow-soft border border-white/10 p-6 md:p-8">
      <h1 class="headline text-2xl text-text-main mb-2">Acesso Admin</h1>
      <p class="text-text-meta mb-6">Informe a senha de administraÃ§Ã£o.</p>

      <% if (error) { %>
        <div class="mb-4 p-3 bg-red-50 text-red-700 rounded-lg text-sm font-medium border border-red-100">
          <%= error %>
        </div>
      <% } %>

      <form method="post" action="/admin/login" class="space-y-4">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div>
          <label class="block text-sm font-bold text-text-main mb-2">Senha</label>
          <input type="password" name="password" required minlength="4"
            class="w-full h-12 rounded-lg border-white/10 focus:ring-primary focus:border-primary px-4 text-lg font-bold"
            placeholder="********">
        </div>
        <button
          class="w-full px-6 py-3 bg-primary text-black rounded-xl font-bold hover:bg-green-600 shadow-glow transition-colors">Entrar</button>
      </form>
    </div>
  </main>
</body>

</html>
