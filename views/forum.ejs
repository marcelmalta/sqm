<!doctype html>
<html>

<head>
  <%- include("partials/head") %>
</head>

<body class="page-enter bg-bg-main text-text-main flex flex-col min-h-screen">
  <%- include("partials/nav", { user }) %>

  <main class="flex-grow max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
      <div>
        <h1 class="headline text-3xl text-text-main">Comunidade</h1>
        <p class="text-text-meta mt-1">Discuta tratamentos, notícias e compartilhe experiências.</p>
      </div>
      <% if (!user) { %>
        <a href="/login" class="inline-flex items-center justify-center px-6 py-3 rounded-xl text-black bg-primary hover:bg-green-600 shadow-glow transition-colors w-full md:w-auto text-center">Entrar para Criar Tópico</a>
      <% } else { %>
        <button onclick="document.getElementById('new-topic-form').classList.toggle('hidden')"
          class="inline-flex items-center justify-center px-6 py-3 rounded-xl text-black bg-primary hover:bg-green-600 shadow-glow transition-colors w-full md:w-auto">
          + Criar Novo Tópico
        </button>
      <% } %>
    </div>

    <% if (user) { %>
      <div id="new-topic-form" class="hidden mb-6 glass p-6 rounded-2xl shadow-soft border border-white/10 animate-fade-in">
        <h3 class="headline text-lg text-text-main mb-4">Novo Tópico</h3>
        <form action="/forum/new" method="POST" class="space-y-4">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="md:col-span-1">
              <label class="block text-sm font-medium text-text-main mb-1">Categoria</label>
              <input type="text" name="category" placeholder="Ex: Tratamentos"
                class="w-full h-10 rounded-lg border border-white/10 bg-bg-card focus:ring-primary focus:border-primary">
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-text-main mb-1">Título</label>
              <input type="text" name="title" required minlength="5" maxlength="160"
                class="w-full h-10 rounded-lg border border-white/10 bg-bg-card focus:ring-primary focus:border-primary">
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-text-main mb-1">Mensagem</label>
            <textarea name="body" rows="4" required minlength="10"
              class="w-full rounded-lg border border-white/10 bg-bg-card focus:ring-primary focus:border-primary"></textarea>
          </div>
          <div class="flex justify-end">
            <button class="px-6 py-2 bg-primary text-black rounded-lg hover:bg-green-600 font-medium transition-colors shadow-glow">Publicar Tópico</button>
          </div>
        </form>
      </div>
    <% } %>

    <div class="flex items-center gap-6 mb-6 border-b border-white/10 pb-px overflow-x-auto text-sm font-medium">
      <button class="text-primary border-b-2 border-primary pb-3 px-1">Mais Recentes</button>
      <button class="text-text-meta hover:text-text-main pb-3 px-1 transition-colors">Mais Comentados</button>
    </div>

    <div class="glass rounded-2xl shadow-soft border border-white/10 divide-y divide-white/10 overflow-hidden">
      <% if (!topics.length) { %>
        <div class="p-10 text-center text-text-meta">
          <h3 class="mt-2 text-sm font-medium text-text-main">Nenhum tópico</h3>
          <p class="mt-1 text-sm text-text-meta">Comece uma nova conversa agora mesmo.</p>
        </div>
      <% } %>

      <% topics.forEach(t=> { %>
        <a href="/t/<%= t.id %>" class="block p-5 hover:bg-bg-surface transition-colors group relative">
          <div class="flex items-center justify-between gap-4">
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-primary/15 text-primary uppercase tracking-wide"><%= t.category %></span>
                <span class="text-xs text-text-meta"><%= new Date(t.created_at).toLocaleDateString('pt-BR') %></span>
              </div>
              <h3 class="headline text-lg text-text-main group-hover:text-primary transition-colors line-clamp-1"><%= t.title %></h3>
              <div class="flex items-center gap-2 text-xs text-text-meta">
                <div class="w-7 h-7 rounded-full bg-primary/15 flex items-center justify-center text-primary text-[10px] font-bold">
                  <%= t.author_email ? t.author_email[0].toUpperCase() : '?' %>
                </div>
                <span class="text-text-meta group-hover:text-text-main transition-colors"><%= t.author_email %></span>
              </div>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  </main>
</body>

</html>
