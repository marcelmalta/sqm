<!doctype html>
<html>

<head>
  <%- include("partials/head") %>
</head>

<body class="page-enter bg-bg-main text-text-main flex flex-col min-h-screen">
  <%- include("partials/nav", { user }) %>

    <main class="flex-grow max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">

      <!-- Header -->
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
          <h1 class="headline text-3xl font-bold text-text-main">Fórum</h1>
          <p class="text-text-meta mt-1">Discuta tratamentos, notícias e compartilhe experiências.</p>
        </div>

        <% if (!user) { %>
          <a href="/login"
            class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-primary hover:bg-teal-700 shadow-glow transition-colors w-full md:w-auto text-center">
            Entrar para Criar Tópico
          </a>
          <% } else { %>
            <button onclick="document.getElementById('new-topic-form').classList.toggle('hidden')"
              class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-primary hover:bg-teal-700 shadow-glow transition-colors w-full md:w-auto">
              + Criar Novo Tópico
            </button>
            <% } %>
      </div>

      <!-- New Topic Form (Collapsible) -->
      <% if (user) { %>
        <div id="new-topic-form"
          class="hidden mb-8 glass p-6 rounded-2xl shadow-soft border border-white/60 animate-fade-in">
          <h3 class="text-lg font-bold mb-4">Novo Tópico</h3>
          <form action="/forum/new" method="POST" class="space-y-4">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="md:col-span-1">
                <label class="block text-sm font-medium text-text-main mb-1">Categoria</label>
                <input type="text" name="category" placeholder="Ex: Tratamentos"
                  class="w-full h-10 rounded-lg border-white/60 bg-white/70 focus:ring-primary focus:border-primary">
              </div>
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-text-main mb-1">Título</label>
                <input type="text" name="title" required minlength="5" maxlength="160"
                  class="w-full h-10 rounded-lg border-white/60 bg-white/70 focus:ring-primary focus:border-primary">
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-text-main mb-1">Mensagem</label>
              <textarea name="body" rows="4" required minlength="10"
                class="w-full rounded-lg border-white/60 bg-white/70 focus:ring-primary focus:border-primary"></textarea>
            </div>
            <div class="flex justify-end">
              <button
                class="px-6 py-2 bg-primary text-white rounded-lg hover:bg-teal-700 font-medium transition-colors shadow-glow">Publicar
                Tópico</button>
            </div>
          </form>
        </div>
        <% } %>

          <!-- Filter Mockup -->
          <div class="flex items-center gap-6 mb-6 border-b border-gray-100 pb-px overflow-x-auto text-sm font-medium">
            <button class="text-primary border-b-2 border-primary pb-3 px-1">Mais Recentes</button>
            <button class="text-text-meta hover:text-text-main pb-3 px-1 transition-colors">Mais Comentados</button>
          </div>

          <!-- Topic List -->
          <div class="glass rounded-2xl shadow-soft border border-white/60 divide-y divide-white/60 overflow-hidden">
            <% if (!topics.length) { %>
              <div class="p-12 text-center text-text-meta">
                <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhum tópico</h3>
                <p class="mt-1 text-sm text-gray-500">Comece uma nova conversa agora mesmo.</p>
              </div>
              <% } %>

                <% topics.forEach(t=> { %>
                  <a href="/t/<%= t.id %>" class="block p-4 md:p-6 hover:bg-white transition-colors group relative hover:-translate-y-0.5">
                    <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
                      <div class="flex-grow space-y-2">
                        <div class="flex items-center gap-2">
                          <span
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-primary/10 text-primary uppercase tracking-wide">
                            <%= t.category %>
                          </span>
                          <span class="text-xs text-text-meta flex items-center gap-1">
                            <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <%= new Date(t.created_at).toLocaleDateString('pt-BR') %>
                          </span>
                        </div>
                        <h3
                          class="headline text-lg font-bold text-text-main group-hover:text-primary transition-colors line-clamp-1">
                          <%= t.title %>
                        </h3>

                        <div class="flex items-center gap-3 mt-1">
                          <div class="flex items-center gap-2 text-xs font-medium text-gray-900">
                            <div
                              class="w-7 h-7 rounded-full bg-primary/10 flex items-center justify-center text-primary text-[10px] font-bold ring-2 ring-white/60">
                              <%= t.author_email ? t.author_email[0].toUpperCase() : '?' %>
                            </div>
                            <span class="text-text-meta group-hover:text-gray-900 transition-colors">
                              <%= t.author_email %>
                            </span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </a>
                  <% }) %>
          </div>

    </main>
</body>

</html>





