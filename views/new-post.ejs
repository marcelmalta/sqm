<!doctype html>
<html>

<head>
  <%- include("partials/head") %>
    <!-- Simple Markdown Editor Styles Stub -->
    <style>
      .editor-area {
        min-height: 400px;
        font-family: 'Courier Prime', 'Courier New', monospace;
      }
    </style>
</head>

<body class="page-enter bg-bg-main text-text-main flex flex-col min-h-screen">
  <%- include("partials/nav", { user }) %>

    <main class="flex-grow max-w-4xl mx-auto px-4 py-8 w-full">
      <div class="mb-6 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">Novo Post</h1>
        <a href="/" class="text-text-meta hover:text-text-main text-sm font-medium">Cancelar</a>
      </div>

      <% if (error) { %>
        <div class="mb-6 p-4 bg-red-50 text-red-700 rounded-lg text-sm font-medium border border-red-100">
          <%= error %>
        </div>
        <% } %>

          <form action="/admin/new-post" method="POST" class="space-y-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="glass rounded-2xl shadow-soft border border-white/60 p-6 md:p-8 space-y-6">

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-bold text-gray-700 mb-2">Título</label>
                  <input type="text" name="title" required minlength="5" maxlength="160"
                    class="w-full h-12 rounded-lg border-gray-200 focus:ring-primary focus:border-primary px-4 text-lg font-bold"
                    placeholder="Digite o título do post...">
                </div>
                <div>
                  <label class="block text-sm font-bold text-gray-700 mb-2">Categoria</label>
                  <select name="category"
                    class="w-full h-12 rounded-lg border-gray-200 focus:ring-primary focus:border-primary px-4">
                    <option>Geral</option>
                    <option>Notícias</option>
                    <option>Tratamentos</option>
                    <option>Histórias</option>
                  </select>
                </div>
              </div>

              <div>
                <label class="block text-sm font-bold text-gray-700 mb-2">Resumo (Excerpt)</label>
                <textarea name="excerpt" required minlength="10" maxlength="220" rows="3"
                  class="w-full rounded-lg border-gray-200 focus:ring-primary focus:border-primary p-4"
                  placeholder="Uma breve descrição que aparecerá na listagem..."></textarea>
                <p class="text-xs text-text-meta mt-1 text-right">Máx. 220 caracteres</p>
              </div>

              <div>
                <label class="block text-sm font-bold text-gray-700 mb-2">Conteúdo</label>
                <!-- Future: Replace with Rich Text Editor -->
                <textarea name="content" required minlength="30"
                  class="w-full rounded-lg border-gray-200 focus:ring-primary focus:border-primary p-4 editor-area text-base leading-relaxed"
                  placeholder="Escreva seu artigo aqui... (Markdown suportado futuramente)"></textarea>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-bold text-gray-700 mb-2">Tags (Opcional)</label>
                  <input type="text" name="tags"
                    class="w-full h-10 rounded-lg border-gray-200 focus:ring-primary focus:border-primary px-4 text-sm"
                    placeholder="ex: sqm, sensibilidade, alergia">
                </div>
                <div>
                  <label class="block text-sm font-bold text-gray-700 mb-2">Fonte Externa (Link)</label>
                  <input type="url" name="source_url"
                    class="w-full h-10 rounded-lg border-gray-200 focus:ring-primary focus:border-primary px-4 text-sm"
                    placeholder="https://...">
                </div>
              </div>

            </div>

            <div class="flex justify-end gap-4">
              <button type="button"
                class="px-6 py-3 rounded-xl border border-gray-200 text-text-meta font-bold hover:bg-white/70 transition-colors">Salvar
                Rascunho</button>
              <button
                class="px-6 py-3 bg-primary text-white rounded-xl font-bold hover:bg-teal-700 shadow-glow transition-colors">Publicar
                Post</button>
            </div>
          </form>
    </main>
</body>

</html>



